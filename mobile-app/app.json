{
  "expo": {
    "name": "Brick Focus",
    "slug": "brick-focus",
    "version": "1.0.0",
    "scheme": "brickfocus",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.brickfocus.app",
      "appleTeamId": "NNS3B4399D",
      "buildNumber": "15",
      "infoPlist": {
        "NFCReaderUsageDescription": "Brick Focus usa NFC para activar el modo focus",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": [
          "TAG"
        ],
        "com.apple.developer.family-controls": true,
        "com.apple.security.application-groups": [
          "group.com.brickfocus.app"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.brickfocus.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.NFC"
      ]
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "17.0"
          }
        }
      ],
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "Brick Focus necesita acceso a NFC para leer tu tag",
          "selectIdentifiers": [],
          "systemCodes": [],
          "includeNdefEntitlement": false
        }
      ],
      [
        "react-native-device-activity",
        {
          "appleTeamId": "NNS3B4399D",
          "appGroup": "group.com.brickfocus.app"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e696a939-c528-4abc-98c6-9825693c90e8"
      }
    },
    "owner": "alangael2410"
  }
}
